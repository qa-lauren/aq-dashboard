<% if !session[:rotate] %>
  clearTimeout(rotate_timer);
<% else %>
  <%= render partial: '/layouts/rotate_env.js', locals: { next_env: EnvironmentTag.get_next_env(@env_tag) } %>
<% end %>

$('#rotate-env').text("Rotate: ")
  .append($('<b></b>')
  .text("<%= session[:rotate] %> "));

$('#rotate-box').text("Turn <%= session[:rotate] == true ? 'off' : 'on' %> rotation");
